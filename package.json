{
  "name": "advanced-logger",
  "version": "1.0.3",
  "description": "Advanced logger module extendable with plugins. Works in nodejs and browsers",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "jam": {
    "main": "./dist/index.browser.js"
  },
  "browser": {
    "dist/index.js": "./dist/index.browser.js"
  },
  "scripts": {
    "build": "webpack || echo not ok",
    "build-prod": "webpack --config webpack.config.prod.js",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "coverage": "npm test -- --coverage --no-cache",
    "coverage:watch": "npm run coverage -- --watch",
    "prepare": "npm run build && npm test",
    "release": "standard-version && npm pack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexeyPopovUA/universal-logger.git"
  },
  "keywords": [
    "logger",
    "advanced-logger",
    "logger-plugin",
    "sumologic",
    "strategy",
    "typescript",
    "library",
    "webpack",
    "browserify",
    "dts-bundle",
    "package",
    "tslint",
    "jest",
    "tsloader",
    "ts-loader"
  ],
  "author": "Oleksii Popov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlexeyPopovUA/universal-logger/issues"
  },
  "homepage": "https://github.com/AlexeyPopovUA/universal-logger#readme",
  "devDependencies": {
    "@types/es6-promise": "0.0.33",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "browserify": "^14.4.0",
    "delete-empty": "^1.0.1",
    "dts-bundle": "^0.7.3",
    "jest": "^21.2.1",
    "sinon": "^4.1.2",
    "standard-version": "^4.2.0",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "uglifyify": "^4.0.5",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "testRegex": "__tests__/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
